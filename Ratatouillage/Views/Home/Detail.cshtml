@model RecipeDetailViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h1 class="display-4">Recette</h1>

    <h2>@Model.Name</h2>
    <p>@Model.Desc</p>

    <h3>Ingrédients :</h3>
    <ul>
        @foreach(IngredientRecipeViewModel iwq in Model.Ingredients)
        {
            <li>@iwq.Name - @iwq.Quantity</li>
        }
    </ul>

</div>
